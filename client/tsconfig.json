{
  // This file can be removed in the future if necessary
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "node_modules",
    "**/node_modules/**",
    "webpack.config.js",
    "webpack.development.js",
    "webpack.production.js",
    ".babelrc.js",
    "docker-compose.*",
    ".docker/**"
  ]
}
